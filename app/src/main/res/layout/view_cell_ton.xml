<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.Tonkeeper.Cell">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_ton"
        android:backgroundTint="#0098E9"
        android:background="@drawable/bg_white_oval"
        android:layout_gravity="center"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/offset"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.Tonkeeper.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ton"
            android:singleLine="true"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.Tonkeeper.Caption"
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.Tonkeeper.Title"
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:singleLine="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.Tonkeeper.Caption"
            android:id="@+id/balance_usd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:gravity="end" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>