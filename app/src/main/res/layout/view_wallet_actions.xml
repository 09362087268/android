<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginBottom="32dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.tonkeeper.ui.widget.WalletActionView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_arrow_up_28"
            android:title="@string/send"/>

        <com.tonkeeper.ui.widget.WalletActionView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_arrow_down_28"
            android:title="@string/receive"/>

        <com.tonkeeper.ui.widget.WalletActionView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_plus_28"
            android:title="@string/buy_ton"/>

        <com.tonkeeper.ui.widget.WalletActionView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_swap_horizontal_28"
            android:title="@string/swap"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>