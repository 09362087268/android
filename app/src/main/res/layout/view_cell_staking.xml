<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.Tonkeeper.Cell">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_staking"
        android:backgroundTint="#39CC83"
        android:background="@drawable/bg_white_oval"
        android:layout_gravity="center"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/offset"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.Tonkeeper.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/staking"
            android:singleLine="true"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.Tonkeeper.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:text="@string/staking_description"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_chevron_right_16"/>

</androidx.appcompat.widget.LinearLayoutCompat>