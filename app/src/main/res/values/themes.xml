<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Tonkeeper" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance.Tonkeeper.Headline" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="TextAppearance.Tonkeeper.Label" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="TextAppearance.Tonkeeper.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="TextAppearance.Tonkeeper.Caption" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Theme.Tonkeeper.Cell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:paddingHorizontal">@dimen/offset</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Theme.Tonkeeper.Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_bar_height</item>
        <item name="android:paddingHorizontal">@dimen/offset</item>
        <item name="android:textAppearance">@style/TextAppearance.Tonkeeper.Title</item>
    </style>

    <style name="TextAppearance.Tonkeeper.Tabs" parent="Widget.Design.TabLayout">
        <!--item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabRippleColor">@color/divider</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicator">@drawable/bg_tab_indicator</item-->
        <item name="tabTextAppearance">@style/TextAppearance.Tonkeeper.Tab</item>
    </style>

    <style name="TextAppearance.Tonkeeper.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>