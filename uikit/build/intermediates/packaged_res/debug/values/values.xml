<?xml version="1.0" encoding="utf-8"?>
<resources>
    <bool name="use_light_system_bars">true</bool>
    <color name="accentBlue">#0077FF</color>
    <color name="accentGreen">#34C751</color>
    <color name="accentOrange">#FF9500</color>
    <color name="accentPurple">#5856D6</color>
    <color name="accentRed">#FF4133</color>
    <color name="backgroundContent">#FFFFFF</color>
    <color name="backgroundContentAttention">#FFFFFF</color>
    <color name="backgroundContentTint">#F0F0F5</color>
    <color name="backgroundHighlighted">#14000000</color>
    <color name="backgroundOverlayExtraLight">#3D000000</color>
    <color name="backgroundOverlayLight">#7A000000</color>
    <color name="backgroundOverlayStrong">#B8000000</color>
    <color name="backgroundPage">#F0F0F5</color>
    <color name="backgroundTransparent">#F5F0F0F5</color>
    <color name="buttonPrimaryBackground">#0077FF</color>
    <color name="buttonPrimaryBackgroundDisabled">#FFFFFF</color>
