    <color name="buttonSecondaryBackground">#E6E6EB</color>
    <color name="buttonSecondaryBackgroundDisabled">#FFFFFF</color>
    <color name="buttonSecondaryBackgroundHighlighted">#FFFFFF</color>
    <color name="buttonSecondaryForeground">#000000</color>
    <color name="buttonTertiaryBackground">#FFFFFF</color>
    <color name="buttonTertiaryBackgroundDisabled">#FFFFFF</color>
    <color name="buttonTertiaryBackgroundHighlighted">#FFFFFF</color>
    <color name="buttonTertiaryForeground">#000000</color>
    <color name="constantBlack">#000000</color>
    <color name="constantBlue">#0077FF</color>
    <color name="constantRed">#FF3B30</color>
    <color name="constantWhite">#FFFFFF</color>
    <color name="fieldActiveBorder">#0077FF</color>
    <color name="fieldBackground">#FFFFFF</color>
    <color name="fieldErrorBackground">#1FFF4133</color>
    <color name="fieldErrorBorder">#FF4133</color>
    <color name="iconPrimary">#000000</color>
    <color name="iconPrimaryAlternate">#000000</color>
    <color name="iconSecondary">#7E868F</color>
    <color name="iconTertiary">#A0A6AD</color>
    <color name="separatorAlternate">#14000000</color>
    <color name="separatorCommon">#14000000</color>
    <color name="tabBarActiveIcon">#0077FF</color>
    <color name="tabBarInactiveIcon">#7E868F</color>
    <color name="textAccent">#0077FF</color>
    <color name="textPrimary">#000000</color>
    <color name="textPrimaryAlternate">#000000</color>
    <color name="textSecondary">#7E868F</color>
    <color name="textTertiary">#A0A6AD</color>
    <dimen name="barHeight">64dp</dimen>
    <dimen name="cornerExtraExtraSmall">4dp</dimen>
    <dimen name="cornerExtraSmall">8dp</dimen>
    <dimen name="cornerLarge">20dp</dimen>
    <dimen name="cornerMedium">16dp</dimen>
    <dimen name="cornerSmall">12dp</dimen>
    <dimen name="offsetExtraExtraSmall">2dp</dimen>
    <dimen name="offsetExtraSmall">4dp</dimen>
    <dimen name="offsetLarge">32dp</dimen>
    <dimen name="offsetMedium">16dp</dimen>
    <style name="Base.Widget.App.Button" parent="android:Widget.Material.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="minHeight">56dp</item>
    </style>
    <style name="TextAppearance.Body1" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:lineHeight">24sp</item>
    </style>
    <style name="TextAppearance.Body2" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="TextAppearance.Body3" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="TextAppearance.Body4CAPS" parent="@android:style/TextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextAppearance.H1" parent="@android:style/TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="TextAppearance.H2" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">32sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="TextAppearance.H3" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="TextAppearance.Label1" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>
    <style name="TextAppearance.Label2" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>
    <style name="TextAppearance.Label3" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>
    <style name="TextAppearance.NUM1" parent="@android:style/TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>
    <style name="TextAppearance.NUM2" parent="@android:style/TextAppearance">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>
    <style name="Theme.App" parent="Theme.App.Base">
        <item name="bottomSheetDialogTheme">@style/Widget.BottomSheet</item>
    </style>
    <style name="Theme.App.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:colorBackground">@color/backgroundPage</item>
        <item name="android:windowLightStatusBar">@bool/use_light_system_bars</item>
        <item name="android:windowLightNavigationBar">@bool/use_light_system_bars</item>
        
        <item name="android:navigationBarColor">@color/backgroundPage</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="Widget.App.Button" parent="Base.Widget.App.Button">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/button_primary_foreground_selector</item>
    </style>
    <style name="Widget.App.Button.Secondary" parent="Base.Widget.App.Button">
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textColor">@color/buttonSecondaryForeground</item>
    </style>
    <style name="Widget.BottomSheet" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.BottomSheet.Modal</item>
    </style>
    <style name="Widget.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_modal</item>
        <item name="android:maxWidth">640dp</item>
    </style>
    <declare-styleable name="BackHeaderView">
        <attr format="string|reference" name="android:title"/>
    </declare-styleable>
    <declare-styleable name="BottomTabsView">
        <attr format="reference" name="menu"/>
    </declare-styleable>
    <declare-styleable name="HeaderView">
        <attr format="string|reference" name="android:title"/>
        <attr format="reference" name="android:action"/>
    </declare-styleable>
    <declare-styleable name="IconButtonView">
        <attr format="reference" name="android:icon"/>
        <attr format="string|reference" name="android:title"/>
    </declare-styleable>
    <declare-styleable name="IntroBlockView">
        <attr format="reference" name="android:icon"/>
        <attr format="string|reference" name="android:title"/>
        <attr format="string|reference" name="android:description"/>
    </declare-styleable>
    <declare-styleable name="TextHeaderView">
        <attr format="string|reference" name="android:title"/>
        <attr format="string|reference" name="android:description"/>
    </declare-styleable>
</resources>