<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/security_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/security_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundPage">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <uikit.widget.HeaderView
                android:id="@+id/security_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_close_16"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/offsetLarge"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/offsetLarge"
                    android:textAppearance="@style/TextAppearance.H2"
                    android:textColor="@color/textPrimary"
                    android:text="@string/enter_password"
                    android:gravity="center"/>

                <uikit.widget.password.PasswordInputView
                    android:id="@+id/security_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/offsetLarge"
                    android:layout_marginTop="@dimen/offsetLarge"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <FrameLayout
            android:id="@+id/security_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offsetLarge"
            android:layout_gravity="bottom">

            <Button
                style="@style/Widget.App.Button"
                android:id="@+id/security_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textAppearance="@style/TextAppearance.Label1"
                android:text="@string/done"/>

            <uikit.widget.LoaderView
                android:id="@+id/security_loader"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:color="@color/buttonPrimaryForeground"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/security_success"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/ic_checkmark_circle_32"/>
        </FrameLayout>

    </FrameLayout>

</FrameLayout>