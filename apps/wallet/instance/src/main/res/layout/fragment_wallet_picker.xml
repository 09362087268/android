<?xml version="1.0" encoding="utf-8"?>
<uikit.widget.ColumnLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <uikit.widget.ModalHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wallets"/>

    <uikit.widget.SimpleRecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:maxHeight="320dp"
        android:layout_marginHorizontal="@dimen/offsetMedium"/>

    <FrameLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/offsetMedium">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Widget.App.Button.Small.Secondary"
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tertiaryHeight"
            android:layout_marginVertical="@dimen/offsetMedium"
            android:layout_gravity="center"
            android:paddingStart="@dimen/offsetMedium"
            android:paddingEnd="@dimen/offsetMedium"
            android:text="@string/add_wallet" />

    </FrameLayout>
</uikit.widget.ColumnLayout>