    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowActivityTransitions">false</item>
        <item name="windowSplashScreenBackground">#10161F</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/bg_splash</item>
        <item name="splashScreenIconSize">128dp</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="postSplashScreenTheme">@style/Theme.App.Blue</item>
    </style>

    <style name="Theme.App.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
